
<p id="notice"><%= notice %></p>
<div class="container-fluid">
<table id="pro_table">
  <tr>
    <td><strong>Name:</strong></td>
    <td><%= @product.name %></td> 
  </tr>

  <tr>
    <td><strong>Description:</strong></td>
    <td><%= @product.description %></td> 
  </tr>

  <tr>
    <td><strong>Image:</strong></td>
    <td><%= image_tag @product.image_url.medium5x5.url ,width: "60px",height: "60px" %></td> 
  </tr>

  <tr>
    <td><strong>Price:</strong></td>
    <td><%= @product.price %></td> 
  </tr>

  <tr>
    <td><strong>Curr status:</strong></td>
    <td><%= @product.curr_status %></td> 
  </tr>

  <tr>
    <td><strong>Sub Category:</strong></td>
    <td><%#= @product.subcategory.name %></td> 
  </tr>

  <tr>
    <td><%= link_to 'Edit', edit_product_path(@product),{:class => "btn btn-primary"} %> |
    <%= link_to 'Back', products_path,{:class => "btn btn-primary"} %></td> 
  </tr>
</table>
<div>


