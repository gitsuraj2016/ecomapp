<% products.each do |pro| %>
<div class="col-md-4 col-sm-6">
    <div class="product-container2 product-container1 text-center">
        <!-- <img src="/assets/img550.jpg" alt="" /> -->
        <%= image_tag(pro.image_url.medium5x5.url) %>
        <h4><%= pro.name %></h4>
        <p>Rs.<%= pro.price %></p>
        <div class="wishlist-button">
            <%= button_to 'Add to Cart', line_items_path(product_id: pro),class: "btn btn-default-style2 pro_add_to_cart" %>
            <!-- <button class="btn btn-default-style2">Add To Cart</button> -->
            <%#= button_to 'Buy Now', product_detail_path(p_id: pro.id),class: "btn btn-warning" %>
            <%= link_to "Buy Now",{ 
            :controller => "home", 
            :action => "product_detail", 
            :p_id => pro.id },{:class => "btn btn-warning"}  %>
            <!-- <a href="/home/product_detail/<%=pro.id%>" class="btn btn-warning">Buy Now</a> -->
            <div class="heart1">
                <a href="#"><i class="fa fa-heart" aria-hidden="true"></i></a>
            </div>
        </div>
    </div>
</div>
<% end %>
<style type="text/css">
    .pro_add_to_cart{
    display: inline;
}
</style>