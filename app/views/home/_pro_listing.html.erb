<% products.each do |pro| %>
<div class="col-md-4 col-sm-6">
    <div class="product-container2 product-container1 text-center">
        <img src="/assets/img550.jpg" alt="" />
        <h4><%= pro.name %></h4>
        <p>Rs.<%= pro.price %></p>
        <div class="wishlist-button">
            <%= button_to 'Add to Cart', line_items_path(product_id: pro),class: "btn btn-default-style2" %>
            <!-- <button class="btn btn-default-style2">Add To Cart</button> -->
            <a href="/home/product_detail" class="btn btn-warning">Buy Now</a>
            <div class="heart1">
                <a href="#"><i class="fa fa-heart" aria-hidden="true"></i></a>
            </div>
        </div>
    </div>
</div>
<% end %>