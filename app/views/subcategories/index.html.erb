<div class="container-fluid">
<p id="notice"><%= notice %></p>

<h1>Listing Subcategories</h1>

<table class="table table-bordred table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Active</th>
      <th>Category</th>
      <th colspan="3" style="padding-left:64px;">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @subcategories.each do |subcategory| %>
      <tr>
        <td><%= subcategory.name %></td>
        <td><%= subcategory.description %></td>
        <td><%= image_tag(subcategory.image_url, class: 'list_image', width: "30px" ,heigth: "30px") %></td>
        <td><%= subcategory.active %></td>
        <td><%= subcategory.category.name %></td>
        <td><%= link_to 'Show', subcategory ,{:class => "btn btn-success"} %>
        <%= link_to 'Edit', edit_subcategory_path(subcategory) ,{:class => "btn btn-info"}%>
        <%= link_to 'Destroy', subcategory,:class => "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subcategory', new_subcategory_path ,{:class => "btn btn-primary"}%>
</div>
