<div class="container-fluid">
<p id="notice"><%= notice %></p>

<h1>Listing Brands</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Enable</th>
       <th colspan="3" style="padding-left:64px;">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= brand.enabled %></td>
        <td><%= link_to 'Show', brand ,{:class => "btn btn-success"}%></td>
        <td><%= link_to 'Edit', edit_brand_path(brand) ,{:class => "btn btn-info"}%></td>
        <td><%= link_to 'Destroy', brand, :class => "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Brand', new_brand_path ,{:class => "btn btn-primary"} %>
</div>
