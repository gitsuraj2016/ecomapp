<div class="container-fluid">
<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table class="table table-bordred table-striped">
  <thead>
    <tr>
      <th class="pro_head">Name</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th>Curr status</th>
      <th>Subcategory</th>
      <!-- <th colspan="3"></th> -->
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= image_tag(product.image_url, class: 'list_image', width: "30px" ,heigth: "30px") %></td>
        <!-- <td><%= product.image_url %></td> -->
        <td><%= product.price %></td>
        <td><%= product.curr_status %></td>
        <td><%#= product.subcategory.name %></td>
        <td><%= link_to 'Show', product,{:class => "btn btn-success"}%>
        <%= link_to 'Edit', edit_product_path(product),{:class => "btn btn-info"}%>
        <%= link_to 'Destroy', product,:class => "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

